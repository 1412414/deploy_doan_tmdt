<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="https://blackrockdigital.github.io/startbootstrap-sb-admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

<div class="container">
    <h3>Báo cáo thống kê</h3>
    <span class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Doanh thu</button>
        <ul class="dropdown-menu">
            <li><a href="/staffreport/revenue" class="dropdown-item all">Ngày</a></li>
            <li><a href="/staffreport/revenue" class="dropdown-item service">Tuần</a></li>
            <li><a href="/staffreport/revenue" class="dropdown-item commission">Tháng</a></li>
        </ul>
    </span>

    <span class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Lợi nhuận</button>
        <ul class="dropdown-menu">
            <li><a href="/staffreport/profit" class="dropdown-item all">Ngày</a></li>
            <li><a href="/staffreport/profit" class="dropdown-item service">Tuần</a></li>
            <li><a href="/staffreport/profit" class="dropdown-item service">Tháng</a></li>
        </ul>
    </span>

<!-- <div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Income Report
    </div>
</div> -->
<br><br><br>
<table id="all-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th colspan="3" class="text-center">TỔNG DOANH THU</th>            
        </tr>
    </thead>
    <thead>
        <tr>
            <th>STT</th>
            <th>Hình thức</th>
            <th>Doanh thu</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="2"><center>Tổng</center></th>
            <th><%= @revenue_tong %> VNĐ</th>
        </tr>
    </tfoot>
    <tbody>
        <tr>
            <td>1</td>
            <td>Phí dịch vụ</td>
            <td><%= @dichvu_tong %></td>
        </tr>
        <tr>
            <td>2</td>
            <td>Phí trung gian</td>
            <td><%= @phitrunggian_tong %></td>
        </tr>

    </tbody>
</table>
<br>
<h4 class="text-center">Tỷ lệ doanh thu</h4>

<%= pie_chart("Phí dịch vụ" => @dichvu_tong, "Phí trung gian" => @phitrunggian_tong) %>
<br><br>
<table id="expense-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th colspan="3" class="text-center">TỔNG CHI PHÍ</th>            
        </tr>
    </thead>
    <thead>
        <tr>
            <th>STT</th>
            <th>Khoản</th>
            <th>Chi phí</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="2"><center>Tổng</center></th>
            <th>10000</th>
        </tr>
    </tfoot>
    <tbody>
        <tr>
            <td>1</td>
            <td>Lương bổng</td>
            <td>5000</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Hosting</td>
            <td>2000</td>
        </tr>
        <tr>
            <td>3</td>
            <td>Quảng cáo</td>
            <td>3000</td>
        </tr>

    </tbody>
</table>
<br>
<h4 class="text-center">Tỷ lệ chi phí</h4>

<%= pie_chart("Lương bổng" => 5000, "Hosting" => 2000, "Quảng cáo" => 3000) %>
<br><br>
<table id="net-profit-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th colspan="3" class="text-center">TỔNG LỢI NHUẬN</th>            
        </tr>
    </thead>
    <thead>
        <tr>
            <th>STT</th>
            <th>Khoản thu chi</th>
            <th>Giá trị</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th colspan="2"><center>Tổng</center></th>
            <th><%= @profit %></th>
        </tr>
    </tfoot>
    <tbody>
        <tr>
            <td>1</td>
            <td>Doanh thu</td>
            <td><%= @revenue_tong %> VNĐ</td>
        </tr>
        <tr>
            <td>2</td>
            <td>Chi phí</td>
            <td>-10000</td>
        </tr>
    </tbody>
</table>
</div>

