<% content_for :title, "Đăng sản phẩm" %>
<div class="container">
	<h1>Đăng sản phẩm</h1>
	<div class="row">
		<%= form_for [:customer, Product.new], url: { action: "create" }, html: { id: "FormDangSanPham", enctype: "multipart/form-data" } do |f| %>
			<div class="row">
				<div class="col-lg-7">
					<div class="panel panel-default">
					    <div class="panel-heading">Thông tin sản phẩm</div>
					    <div class="panel-body">
					    	<div class="row">
					    		<div class="col-lg-4">
						    		<div class="form-group">
									  <label for="DanhMuc">Danh mục:</label>
									  <select class="form-control" id="DanhMuc" name="DanhMuc" required onchange="LayLoaiSanPham()">
									  	<% @danhmuc.each  do |danhmuc| %>
									    	<option value="<%= danhmuc.id %>"><%= danhmuc.category_name %></option>
									    <% end %>
									  </select>
									</div>
									<div class="form-group">
									  <label for="LoaiSanPham">Loại sản phẩm:</label>
									  <select class="form-control" id="LoaiSanPham" name="LoaiSanPham" required>
									  </select>
									</div>
						    	</div>
						    	<div class="col-lg-3">
						    		<div class="form-group">
									    <label for="GiaMuaNgay">Giá mua ngay:</label>
									    <input type="number" class="form-control" id="GiaMuaNgay" name="GiaMuaNgay" required>
									    <span id="NhacNhoSoLuong"><span>
									</div>
						    		<div class="form-group">
									    <label for="SoLuong">Số lượng:</label>
									    <input type="number" class="form-control" id="SoLuong" name="SoLuong" required>
									    <span id="NhacNhoSoLuong"><span>
									</div>		
									<button type="button" class="btn btn-success" onclick="TaoPhien()">Tạo phiên</button>	
						    	</div> 
					    	</div>
							<div class="form-group">
							    <label for="TenSanPham">Tên sản phẩm:</label>
							    <input type="text" class="form-control" id="TenSanPham" name="TenSanPham" required>
							</div>
							<div class="form-group">
							    <label for="MoTa">Mô tả:</label>
							    <textarea type="text" class="form-control" id="MoTa" rows="6" name="MoTa" required></textarea>
							</div>
					    </div>
					</div>
				</div>
				<div class="col-lg-5">
					<div class="panel panel-default">
					    <div class="panel-heading">Hình ảnh sản phẩm</div>
					    <div class="panel-body">
							<input type="file" class="form-control" id="HinhAnh" name="HinhAnh[]" onchange="preview_images();" multiple required>
							<div class="row" id="XemThuHinhAnh"></div>
					    </div>
					</div>
				</div>
			</div>
			<div class="row" id="TaoPhien"></div>
		<% end %>
	</div>
</div>
