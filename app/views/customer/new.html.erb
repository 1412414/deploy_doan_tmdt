<% content_for :title, "Đăng ký" %>
<div class="col-md-3"></div>
<div class="col-md-9">
	<div class="row">
		<div class="col-md-12 mt-2 mb-2">
			<h1>Đăng ký</h1>
		</div>
	</div>
	<div class="bd">
		<div class="row">
			<div class="col-md-12" style="margin: 0 10px">		
				<h2>Thông tin cá nhân</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 px-5" style="margin: 0 30px">
				<%= form_with scope: :customer, url: create_customer_path, local: true do |f|%>
				<label for="">Loại tài khoản</label>
				<div class="form-check">				
				    <label class="form-check-label">
				    	<%= f.radio_button :customer_type, 'Thường', :required => true %>
				    	<%= f.label :customer_type, "Thường", :value => 'Thường' %>
				    </label>
				</div>
				<div class="form-check">				
				    <label class="form-check-label">
				    	<%= f.radio_button :customer_type, 'VIP', :required => true %>
				    	<%= f.label :customer_type, "VIP", :value => 'VIP' %>
				    </label>
				</div>
				<div class="form-group">
					<label for="">Họ tên</label>
					<%= f.text_field :customer_name, :required => true, class: "form-control" %>
				</div>
				<div class="form-group">
					<label for="">Email</label>
					<%= f.email_field :username, :required => true, class: "form-control" %>
				</div>
				<div class="form-group">
					<label for="">Mật khẩu</label>
					<%= f.password_field :password, :required => true, class: "form-control" %>
				</div>
				<button type="submit" class="btn btn-primary">Đăng ký</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="row">
    <div class="container-fluid">
        <% if flash[:signup_error] %>
            <div class="alert alert-danger alert-dismissable fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Error!</strong>
                <%= flash[:signup_error] %>
            </div>
        <% end %>
    </div>
</div>	